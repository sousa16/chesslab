generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  repertoires   Repertoire[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// Chess Repertoire & Spaced Repetition System (SRS) Models
// ============================================================================

enum PieceColor {
  White
  Black
}

// Represents a single chess position (identified by FEN).
// Positions are deduplicated globally and reused across all users/repertoires.
model Position {
  id                String                @id @default(cuid())
  fen               String                @unique @db.Text // FEN string uniquely identifies the position
  createdAt         DateTime              @default(now())
  
  repertoireEntries RepertoireEntry[]     // All repertoire entries that reference this position

  @@index([fen])
}

// Represents a user-created opening repertoire for a specific color.
// Repertoire naming is computed dynamically from move history, not stored.
model Repertoire {
  id        String      @id @default(cuid())
  userId    String
  color     PieceColor
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  user              User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries           RepertoireEntry[]

  @@unique([userId, color])
  @@index([userId])
}

// Represents an entry in a repertoire: a position + expected move + SRS state.
// Multiple repertoires may reference the same position.
// SRS fields (interval, easeFactor, repetitions, nextReviewDate) track learning progress using Anki SM-2.
model RepertoireEntry {
  id              String    @id @default(cuid())
  repertoireId    String
  positionId      String
  expectedMove    String                      // UCI format (e.g., "e2e4") or SAN (e.g., "e4")
  
  // Spaced Repetition System (SRS) fields - Anki SM-2 Algorithm
  interval        Int       @default(0)       // Days until next review
  easeFactor      Float     @default(2.5)     // SM-2 algorithm ease factor (starts at 2.3)
  repetitions     Int       @default(0)       // Number of successful reviews
  nextReviewDate  DateTime  @default(now())   // When this entry is due for review
  lastReviewDate  DateTime?                   // Last time this entry was reviewed
  phase           String    @default("learning") // "learning", "exponential", or "relearning"
  
  // Learning phase tracking
  learningStepIndex Int     @default(0)       // Current step in learning/relearning phases
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  repertoire      Repertoire @relation(fields: [repertoireId], references: [id], onDelete: Cascade)
  position        Position   @relation(fields: [positionId], references: [id], onDelete: Cascade)

  // Allow multiple entries per position (for different moves from same position)
  // but prevent duplicates of the same (repertoire, position, expectedMove) triple
  @@unique([repertoireId, positionId, expectedMove])
  @@index([repertoireId])
  @@index([positionId])
  @@index([nextReviewDate]) // For efficient SRS due date queries
}
