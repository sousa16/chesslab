generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String?         @unique
  emailVerified  DateTime?
  hashedPassword String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  accounts       Account[]
  repertoires    Repertoire[]
  sessions       Session[]
  dailyActivity  DailyActivity[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Position {
  id                String            @id @default(cuid())
  fen               String            @unique
  createdAt         DateTime          @default(now())
  repertoireEntries RepertoireEntry[]

  @@index([fen])
}

model Repertoire {
  id        String            @id @default(cuid())
  userId    String
  color     PieceColor
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries   RepertoireEntry[]
  openings  Opening[]

  @@unique([userId, color])
  @@index([userId])
}

model Opening {
  id           String            @id @default(cuid())
  repertoireId String
  name         String            @default("Opening Line")
  notes        String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  repertoire   Repertoire        @relation(fields: [repertoireId], references: [id], onDelete: Cascade)
  entries      RepertoireEntry[]

  @@index([repertoireId])
}

model RepertoireEntry {
  id                String     @id @default(cuid())
  repertoireId      String
  openingId         String?
  positionId        String
  expectedMove      String
  interval          Int        @default(0)
  easeFactor        Float      @default(2.5)
  repetitions       Int        @default(0)
  nextReviewDate    DateTime   @default(now())
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  lastReviewDate    DateTime?
  learningStepIndex Int        @default(0)
  phase             String     @default("learning")
  position          Position   @relation(fields: [positionId], references: [id], onDelete: Cascade)
  repertoire        Repertoire @relation(fields: [repertoireId], references: [id], onDelete: Cascade)
  opening           Opening?   @relation(fields: [openingId], references: [id], onDelete: SetNull)

  @@unique([repertoireId, positionId, expectedMove])
  @@index([repertoireId])
  @@index([openingId])
  @@index([positionId])
  @@index([nextReviewDate])
}

enum PieceColor {
  White
  Black
}

// Track daily practice activity for streaks, accuracy, and time
model DailyActivity {
  id              String   @id @default(cuid())
  userId          String
  date            DateTime @db.Date // Just the date, no time
  correctCount    Int      @default(0)
  incorrectCount  Int      @default(0)
  timeSpentMs     Int      @default(0) // Milliseconds spent practicing
  positionsReviewed Int    @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}
